<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#96e0d9">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#96e0d9"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="СРЕДНИЕ ПОКАЗАТЕЛИ ПО ДОМУ"
        android:id="@+id/textView29"
        android:textSize="14dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/gineImageView"
        android:background="#96e0d9"
        android:layout_below="@+id/textView29"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gineImageView"
        android:stretchColumns="*"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/imageView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Температура в доме"
                    android:id="@+id/textView31"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="30&#xb0;"
                    android:id="@+id/textView32"
                    android:layout_below="@+id/textView31"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="За окном"
                    android:id="@+id/textView30"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textView33" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="30&#xb0;"
                    android:id="@+id/textView33"
                    android:layout_below="@+id/textView30"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Уровень CO2"
                    android:id="@+id/textView34"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_above="@+id/textView36"
                    android:layout_alignStart="@+id/textView36" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="110 ppm"
                    android:id="@+id/textView36"
                    android:layout_centerVertical="true"
                    android:layout_alignStart="@+id/progressBar2" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar2"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:progress="50"
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:progressTint="#76df8f" />
            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Уровень CO"
                    android:id="@+id/textView35"
                    android:textSize="14dp"
                    android:textColor="#0e0d0d"
                    android:layout_alignParentTop="true"
                    android:layout_alignEnd="@+id/textView37" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="110 ppm"
                    android:id="@+id/textView37"
                    android:layout_centerVertical="true"
                    android:layout_alignStart="@+id/progressBar3" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:progress="50"
                    android:clickable="false"
                    android:progressTint="#76df8f" />
            </RelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"></RelativeLayout>
        </TableRow>

    </TableLayout>

</RelativeLayout>